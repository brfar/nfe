<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Todos</title>
  <link rel="stylesheet" href="./libs/animate.min.css">
  <link rel="stylesheet" type="text/css" href="./libs/semantic.min.css">
  <link rel="stylesheet" type="text/css" href="./libs/style.css">
</head>

<body>
  <div id="flex-item">
    <div id="header">
      <img src="./libs/logogroup-ibis.png" alt="">
      <h1>Log de Envio de NF-e</h1>
    </div>

    <form action="/todos" method="post">
      <div class="ui form">
        <div class="inline fields">
          <div class="three wide field">
            <input type="text" placeholder="RPS" name="description" autocomplete="off">
          </div>

          <div class="five wide field">
            <input type="text" placeholder="Nome" name="nome" autocomplete="off">
          </div>

          <div class="six wide field">
            <input type="email" placeholder="Email" name="email" autocomplete="off">
          </div>
          <button class="mini ui button" type="submit">Enviar</button>
        </div>
      </div>
    </form>

    <div id="flex-baby">

      <table class="ui striped table">
        <thead>
          <tr>
            <th>RPS</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Data</th>
            <th>Enviei?</th>
          </tr>
        </thead>
        <tbody>
          {{#todos}}
          <tr>
            <form action="/todos/{{_id}}/completed" method="post">
              <td onclick="copy(this)" class="att">{{description}}</td>
              <td onclick="copy(this)" class="att">{{nome}}</td>
              <td onclick="copy(this)" class="att">{{email}}</td>
              <td>{{date}}</td>
              <td>
                <button class="circular ui icon button" type="submit">
                  <i class="thumbs up outline icon"></i>
                </button>
              </td>
            </form>
          </tr>
          {{/todos}}
      </table>
      <button class="ui button" id="hideShow">Mostrar Enviados</button>

      <div class="esconder" id="esconde_e_mostra">
        <h1>Notas Enviadas</h1>
        <table class="ui striped table">
          {{#doneTodos}}
          <tr>
            <form action="/todos/{{_id}}/completed" method="post">
              <td onclick="copy(this)" class="caralho att">{{description}}</td>
              <td onclick="copy(this)" class="att">{{nome}}</td>
              <td onclick="copy(this)" class="att">{{email}}</td>
              <td>{{date}}</td>
              <td>
                <button class="circular ui icon button keepList" type="submit">
                  <i class="thumbs down outline icon"></i>
                </button>
              </td>
            </form>
          </tr>
          {{/doneTodos}}
        </table>
        <button class="ui button" id="btnOculto">Ocultar Enviados</button>
      </div>
      </tbody>
    </div>
  </div>

  <script src="./libs/moment.js"></script>
  <script src="./libs/details.js"></script>
</body>

</html>